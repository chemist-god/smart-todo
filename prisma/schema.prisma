// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  phone         String?   @unique
  emailVerified DateTime?
  phoneVerified DateTime?
  image         String?
  password      String?   // For email/password auth
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Auth relations
  accounts      Account[]
  sessions      Session[]
  authenticators Authenticator[]
  verificationTokens VerificationToken[]

  // App relations
  todos         Todo[]
  notes         Note[]
  achievements  UserAchievement[]
  stats         UserStats?
  goals         Goal[]
  
  // SmartStake relations
  wallet        UserWallet?
  stakes        Stake[]
  rewards       Reward[]
  penalties     Penalty[]
  transactions  WalletTransaction[]
  invitations   StakeInvitation[] @relation("StakeInvitations")
  appeals        StakeAppeal[]
  extensions     StakeExtension[]
  recoveryStakes RecoveryStake[]
  escrowTransactions EscrowTransaction[]
  paymentMethods PaymentMethod[]
  paymentIntents PaymentIntent[]
  stripeCustomerId String?
  
  // Timer sessions
  timerSessions   TimerSession[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id          String   @id @default(cuid())
  identifier  String   // email or phone number
  token       String   @unique
  type        TokenType @default(EMAIL_VERIFICATION)
  expires     DateTime
  createdAt   DateTime @default(now())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([identifier, token])
  @@index([identifier])
  @@index([type])
  @@index([expires])
}

model Authenticator {
  id                 String  @id @default(cuid())
  credentialID       String  @unique
  userId             String
  publicKey          String
  counter            BigInt
  transports         String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([credentialID, userId])
}

// App Models
model Todo {
  id          String    @id @default(cuid())
  title       String
  description String?
  completed   Boolean   @default(false)
  dueDate     DateTime?
  priority    Priority  @default(MEDIUM)
  points      Int       @default(10)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?

  // Relations
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Scheduling & Focus/Timer fields
  scheduledStartTime DateTime?
  scheduledEndTime   DateTime?
  estimatedDuration  Int?
  actualDuration     Int?
  timeZone           String?
  timerStatus        TimerStatus @default(STOPPED)
  timerStartTime     DateTime?
  totalTimeSpent     Int         @default(0)
  focusMode          Boolean     @default(false)
  isRecurring        Boolean     @default(false)
  recurrencePattern  RecurrencePattern?
  pomodoroSessions   Int         @default(0)
  breakDuration      Int?
  reminderSettings   Json?

  // Timer sessions relation
  timerSessions      TimerSession[]

  @@index([userId])
  @@index([completed])
  @@index([dueDate])
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String
  type      NoteType @default(GENERAL)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
}

model Achievement {
  id          String   @id @default(cuid())
  name        String   @unique
  description String
  points      Int
  type        AchievementType
  requirement Int      @default(1)
  createdAt   DateTime @default(now())

  // Relations
  userAchievements UserAchievement[]
}

model UserAchievement {
  id           String      @id @default(cuid())
  unlockedAt   DateTime    @default(now())
  progress     Int         @default(0)

  // Relations
  userId       String
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievementId String
  achievement  Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@index([userId])
}

model UserStats {
  id                String   @id @default(cuid())
  totalPoints       Int      @default(0)
  level             Int      @default(1)
  currentStreak     Int      @default(0)
  longestStreak     Int      @default(0)
  todosCompleted    Int      @default(0)
  notesCreated      Int      @default(0)
  achievementsUnlocked Int   @default(0)
  lastActiveDate    DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Enums
enum TokenType {
  EMAIL_VERIFICATION
  PHONE_VERIFICATION
  PASSWORD_RESET
  ACCOUNT_RECOVERY
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

// Timer/recurrence enums for Todo scheduling
enum TimerStatus {
  STOPPED
  RUNNING
  PAUSED
  COMPLETED
}

enum RecurrencePattern {
  DAILY
  WEEKLY
  MONTHLY
  CUSTOM
}

enum NoteType {
  GENERAL
  BIBLE_STUDY
  CONFERENCE
  SONG
  QUOTE
  REFLECTION
}

enum AchievementType {
  TODO
  NOTE
  STREAK
  POINTS
  SPECIAL
}

// Goal tracking models
model Goal {
  id          String      @id @default(cuid())
  title       String
  description String?
  type        GoalType
  target      Int         // Target value (e.g., number of tasks, points, etc.)
  current     Int         @default(0) // Current progress
  unit        String      // Unit of measurement (e.g., "tasks", "points", "days")
  startDate   DateTime
  endDate     DateTime?
  isCompleted Boolean     @default(false)
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  milestones  Milestone[]

  @@index([userId])
  @@index([isActive])
  @@index([type])
}

model Milestone {
  id          String   @id @default(cuid())
  title       String
  description String?
  target      Int
  current     Int      @default(0)
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  goalId      String
  goal        Goal     @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@index([goalId])
}

enum GoalType {
  TASKS_COMPLETED
  POINTS_EARNED
  STREAK_DAYS
  NOTES_CREATED
  ACHIEVEMENTS_UNLOCKED
  CUSTOM
}

// SmartStake Models
model Stake {
  id              String      @id @default(cuid())
  title           String
  description     String?
  stakeType       StakeType
  status          StakeStatus @default(ACTIVE)
  
  // Categorization & Difficulty
  category        String?     // e.g., "fitness", "work", "learning", "personal"
  difficulty      String?     // e.g., "easy", "medium", "hard", "extreme"
  tags            String?     // Comma-separated tags for better categorization
  
  // Popularity & Engagement
  popularity      Int         @default(0) // Calculated based on views, joins, shares
  viewCount       Int         @default(0)
  joinCount       Int         @default(0)
  shareCount      Int         @default(0)
  
  // Financial Details
  totalAmount     Float
  userStake       Float
  friendStakes    Float     @default(0)
  penaltyAmount   Float     @default(0)
  
  // Task Details
  taskId          String?
  deadline        DateTime
  completionProof String?
  
  // Rewards & Penalties
  rewardAmount    Float     @default(0)
  penaltyPool     Float     @default(0)
  
  // Timestamps
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  gracePeriodEnd  DateTime?          // Grace period end time
  completionPercentage Float       @default(0) // For partial completion
  isExtended      Boolean            @default(false) // If deadline was extended
  extensionCount  Int                @default(0) // Number of times extended
  extensionFee    Float            @default(0) // Fee paid for extensions
  completedAt     DateTime?
  
  // Relations
  userId          String
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  participants    StakeParticipant[]
  rewards         Reward[]
  penalties       Penalty[]
  appeals         StakeAppeal[]
  extensions      StakeExtension[]
  invitations     StakeInvitation[]
  recoveryStakes  RecoveryStake[]    @relation("RecoveryStake")
  escrowTransactions EscrowTransaction[]

  @@index([userId])
  @@index([status])
  @@index([stakeType])
  @@index([deadline])
  @@index([gracePeriodEnd])
  @@index([category])
  @@index([difficulty])
  @@index([popularity])
}

model StakeParticipant {
  id              String      @id @default(cuid())
  stakeId         String
  stake           Stake       @relation(fields: [stakeId], references: [id], onDelete: Cascade)
  
  participantId   String
  participantName String
  amount          Float
  isSupporter     Boolean     @default(true)
  
  joinedAt        DateTime    @default(now())
  
  @@index([stakeId])
  @@index([participantId])
}

model Reward {
  id              String      @id @default(cuid())
  stakeId         String
  stake           Stake       @relation(fields: [stakeId], references: [id], onDelete: Cascade)
  
  userId          String
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount          Float
  rewardType      RewardType
  description     String?
  
  awardedAt       DateTime    @default(now())
  
  @@index([userId])
  @@index([stakeId])
}

model Penalty {
  id              String      @id @default(cuid())
  stakeId         String
  stake           Stake       @relation(fields: [stakeId], references: [id], onDelete: Cascade)
  
  userId          String
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount          Float
  reason          String
  
  appliedAt       DateTime    @default(now())
  
  @@index([userId])
  @@index([stakeId])
}

model StakeAppeal {
  id          String        @id @default(cuid())
  stakeId     String
  userId      String
  reason      String
  evidence    String?       // URL or description of evidence
  status      AppealStatus  @default(PENDING)
  adminNotes  String?
  reviewedAt  DateTime?
  reviewedBy  String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  stake       Stake         @relation(fields: [stakeId], references: [id], onDelete: Cascade)
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([stakeId])
  @@index([userId])
  @@index([status])
}

model StakeExtension {
  id          String   @id @default(cuid())
  stakeId     String
  userId      String
  oldDeadline DateTime
  newDeadline DateTime
  extensionFee Float
  reason      String?
  createdAt   DateTime @default(now())
  stake       Stake    @relation(fields: [stakeId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([stakeId])
  @@index([userId])
}

model RecoveryStake {
  id              String             @id @default(cuid())
  originalStakeId String
  userId          String
  title           String
  description     String?
  stakeType       StakeType
  status          StakeStatus        @default(ACTIVE)
  totalAmount     Float
  userStake       Float
  deadline        DateTime
  recoveryTarget  Float            // Amount to recover
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  completedAt     DateTime?
  originalStake   Stake              @relation("RecoveryStake", fields: [originalStakeId], references: [id])
  user            User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([originalStakeId])
  @@index([status])
}

model EscrowTransaction {
  id                    String        @id @default(cuid())
  stakeId               String
  userId                String
  amount                Float
  currency              String        @default("USD")
  status                EscrowStatus  @default(PENDING)
  paymentMethod         PaymentMethodType @default(STRIPE)
  paymentIntentId       String?
  escrowAccountId       String?
  escrowFee             Float
  platformFee           Float
  totalAmount           Float
  releaseType           ReleaseType?
  releaseAmount         Float?
  externalTransactionId String?
  lockedAt              DateTime?
  releasedAt            DateTime?
  refundedAt            DateTime?
  failureReason         String?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  stake                 Stake         @relation(fields: [stakeId], references: [id], onDelete: Cascade)
  user                  User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([stakeId])
  @@index([userId])
  @@index([status])
  @@index([paymentMethod])
  @@index([createdAt])
}

model PaymentMethod {
  id                String   @id @default(cuid())
  userId            String
  provider          String   // 'stripe', 'paypal', 'bank', 'crypto'
  providerId        String   // External payment method ID
  type              String   // 'card', 'bank_account', 'paypal', 'crypto_wallet'
  last4             String?  // Last 4 digits for cards
  brand             String?  // Visa, Mastercard, etc.
  expiryMonth       Int?
  expiryYear        Int?
  isDefault         Boolean  @default(false)
  isVerified        Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([provider])
  @@index([isDefault])
}

model PaymentIntent {
  id              String   @id @default(cuid())
  userId          String
  stakeId         String?
  amount          Float
  currency        String   @default("USD")
  status          String   // Stripe status
  clientSecret    String?
  paymentMethodId String?
  metadata        Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([stakeId])
  @@index([status])
}

model UserWallet {
  id              String      @id @default(cuid())
  userId          String      @unique
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  balance         Decimal   @default(0)
  totalEarned     Decimal   @default(0)
  totalLost       Decimal   @default(0)
  totalStaked     Decimal   @default(0)
  
  // Advanced Metrics
  completionRate  Float     @default(0)
  currentStreak   Int         @default(0)
  longestStreak   Int         @default(0)
  rank            Int         @default(0)
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  // Relations
  transactions    WalletTransaction[]
  
  @@index([userId])
  @@index([rank])
  @@index([completionRate])
}

model WalletTransaction {
  id              String      @id @default(cuid())
  walletId        String
  wallet          UserWallet  @relation(fields: [walletId], references: [id], onDelete: Cascade)
  
  userId          String
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  type            String
  amount          Decimal
  description     String
  referenceId     String?
  
  createdAt       DateTime    @default(now())
  
  @@index([walletId])
  @@index([userId])
  @@index([type])
  @@index([createdAt])
}

// Timer sessions captured for each Todo
model TimerSession {
  id         String   @id @default(cuid())
  todoId     String
  userId     String?
  startTime  DateTime
  endTime    DateTime?
  duration   Int?

  // Relations
  todo       Todo     @relation(fields: [todoId], references: [id], onDelete: Cascade)
  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([todoId])
  @@index([userId])
  @@index([startTime])
}

// SmartStake Enums
enum StakeType {
  SELF_STAKE
  SOCIAL_STAKE
  CHALLENGE_STAKE
  TEAM_STAKE
  CHARITY_STAKE
}

enum StakeStatus {
  ACTIVE
  COMPLETED
  FAILED
  CANCELLED
  EXPIRED
  DISPUTED
  GRACE_PERIOD
  PARTIALLY_COMPLETED
}

enum RewardType {
  SELF_REWARD
  POOL_REWARD
  PENALTY_REWARD
  FRIEND_REWARD
  STREAK_BONUS
  ACHIEVEMENT_BONUS
  COMPLETION
  SUPPORT
  REFUND
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

enum AppealStatus {
  PENDING
  APPROVED
  REJECTED
  UNDER_REVIEW
}

enum EscrowStatus {
  PENDING
  LOCKED
  RELEASED
  REFUNDED
  FAILED
}

enum PaymentMethodType {
  STRIPE
  PAYPAL
  BANK_TRANSFER
  CRYPTO
}

enum ReleaseType {
  REWARD
  REFUND
  PENALTY
}

model StakeInvitation {
  id            String           @id @default(cuid())
  stakeId       String
  inviterId     String
  inviteeEmail  String
  message       String?
  status        InvitationStatus @default(PENDING)
  securityCode  String           @unique
  createdAt     DateTime         @default(now())
  expiresAt     DateTime
  acceptedAt    DateTime?
  lastViewedAt  DateTime?
  viewCount     Int              @default(0)
  
  stake         Stake @relation(fields: [stakeId], references: [id], onDelete: Cascade)
  inviter       User  @relation("StakeInvitations", fields: [inviterId], references: [id], onDelete: Cascade)
  
  @@index([inviteeEmail])
  @@index([stakeId])
  @@index([status])
  @@index([securityCode])
}